@model KnightGame.Web.ViewModels.HomeViewModel
@using KnightGame.Web.Helpers

@{
    ViewBag.Title = "Home Page";
}

<div id="gameUIRoot">
	@Html.Partial("_GameUI")
</div>

@section scripts
{
	@Url.Action("Index", new { cellID = "R1C1" })
	<script type="text/javascript">
		$(function () {
			$("td.nextAvailable").click(function (event) {
				location.href = '@Url.Action("Index")' + '?cellID=' + event.target.id;
			});
		});
	</script>
}
